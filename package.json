{
  "name": "sendgrid-typescript-project",
  "version": "1.0.0",
  "description": "A Node.js project with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "watch": "tsc --watch",
    "deploy": "gcloud functions deploy ocr-passport --runtime nodejs18 --trigger-event google.storage.object.finalize --trigger-resource your-bucket-name --entry-point processPassportImage",
    "deploy:notification": "gcloud functions deploy sendNotification --runtime nodejs20 --trigger-http --allow-unauthenticated --entry-point sendNotification --source .",
    "test:notification": "node test-notification.js",
    "test:local": "npm run build && node local-test-server.js",
    "test:sendgrid": "node -e \"console.log('Testing SendGrid...'); require('./test-notification.js').testSendGridDirect();\"",
    "get-urls": "gcloud functions list --format='table(name,url)' --filter='name:(sendNotification OR addFcmToken)'",
    "get-all-urls": "gcloud functions list --format='table(name,url,status)'"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "sendgrid",
    "ocr",
    "passport",
    "google-cloud",
    "fcm",
    "notifications"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/pubsub": "^4.1.0",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/vision": "^4.0.2",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.11.0",
    "dotenv": "^16.3.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.4.0"
  }
}
